<div
    class="d-flex  justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 mx-4 border-bottom">
    <h1 class=" u-a-h1 "> EDIT USER </h1>

    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary"> ?</button>
        </div>
    </div>
</div>

<!-- listes -->

<div class="col py-3 mx-4">

    <div class="row justify-content-between ">
        <div class="col ">
            <nav area-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/"><i class="bi bi-arrow-left"></i> Dashboard</a></li>
                    <li class="breadcrumb-item active">User Name: <%= edit.fname %> <%= edit.lname %></li>

                </ol>
            </nav>
        </div>

        <div class="col text-end-fw-lighter">
            <b>userId:<%= edit.id  %></b>
        </div>
    </div>
</div>

<!-- user adding form -->

<div class="container px-4">
    <form action="/adminDashboard/user/edit/<%= edit.id %>" method="post">
        <div class="row">
            <div class="form-group py-2 col">
                <label for="fname">First Name:</label>
                <input type="text" class="form-control" id="fname" name="fname" value="<%= edit.fname %>" placeholder="First Name" required>
            </div>
            <div class="form-group py-2 col">
                <label for="lname">Last Name:</label>
                <input type="text" class="form-control" id="lname" value="<%= edit.lname %>" name="lname" placeholder="Last Name" required>
            </div>
        </div>

        <div class="row">
            <div class="form-group py-2 col">
                <label for="email">Email:</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= edit.email %>" placeholder="example@gmail.com"
                    required>
            </div>
            <div class="form-group py-2 col">
                <label for="tel">phone No:</label>
                <input type="tel" class="form-control" id="tel" name="tel" placeholder="+91" value="<%= edit.tel %>" required>
            </div>
        </div>

        <div class="row">
            <div class="form-group py-3">
                <label for="details">Details:</label>
                <textarea name="detail" id="detail" type="textarea" class="form-control" rows="5"
                    placeholder="Enter Your Comments Hear...." ><%= edit.detail %></textarea>
            </div>
        </div>
<div class=" d-flex justify-content-between">
    <button class="btn btn-primary mt-4 btn-sm " type="submit"><i class="bi bi-database-fill-up"></i> Update User</button>
    
    
</div>
        </form>
        <form action="/adminDashboard/user/delete/<%= edit.id %>" method="post">
            <button class="btn btn-danger mt-4 btn-sm " type="submit"> <i class="bi bi-trash3"></i> Delete User</button>
        </form>
</div>