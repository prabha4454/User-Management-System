<div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom mx-4">
  <h1 class="h2" style="color: rgb(12, 98, 12);
  font-size: 30px;
  font-family: 'Courier New', Courier, monospace;
  font-weight: 400;"> USERS DETAILS</h1>

  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group  me-2">
      <a href="/adminDashboard/addUser" class="btn btn-sm btn-outline-success"> <i class="bi bi-person-fill-add"></i> New User</a>
    </div>
  </div>
</div>


<!-- user details table -->

<div class="table-responsive mx-4  ">
  <table class="table  table-striped table-sm">

    <thead class="table-success ">
      <tr class="align-middle text-center ">
        <th scope="col" class="text-danger">S/No</th>
        <th scope="col">First Name</th>
        <th   scope="col"> Last Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody class="  ">
      <% users.forEach((user,index)=> { %>
        <tr class="align-middle text-center ">
          <td><%= index+1 %></td>
          <td class="fname">
            <%=user.fname %>
          </td>
          <td class="lname"> 
            <%= user.lname %>
          </td >
          <td class="email">
            <%= user.email %>
          </td>
          <td class="tel">
            <%= user.tel %>
          </td>
          <td class="d-flex gap-2 justify-content-center">
            <form action="/adminDashboard/user/profile/<%= user.id %>" method="get">
              <button type="submit" class="btn  text-primary"><i class="bi bi-eye"></i></button>
            </form>
            <form action="/adminDashboard/user/delete/<%= user.id %>" method="post">
              <button type="submit" class="btn text-danger">
                <i class="bi bi-trash3"></i>
              </button>
            </form>

          </td>


        </tr>
        <% }) %>
    </tbody>
  </table>
</div>