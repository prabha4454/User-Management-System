<% if (section==='search' ) { %>
    <div class="container w-75 mx-auto p-5 mt-5">
        <form action="/userDashboard/notes" method="post">


            <h3 class="text-center text-success">SEARCH NOTES</h3>
            <div class="row mt-3 ">

                <div class="form-group col"> <label for="dep">Department:</label>
                    <select name="department" id="dep" class="form-control" required>
                        <option value="">Select</option>
                        <option value="Computer Science">CSE</option>
                        <option value="Information Technology">IT</option>
                        <option value="Mechanical">MECH</option>
                        <option value="Electrical And Electronics">EEE</option>
                        <option value="Electrical And Communication">ECE</option>
                        <option value="civl">CIVIL </option>
                    </select>

                </div>



                <div class="form-group col">
                    <label for="studyear">year:</label>
                    <select name="studyear" id="year" class="form-control" required>
                        <option value="">Select</option>
                        <option value="First Year">FIRST</option>
                        <option value="Secont Year">SECOND</option>
                        <option value="Third Year">THIRD</option>
                        <option value="Fourth Year">FOURTH</option>
                    </select>
                </div>

                <div class="form-group col"> <label for="sem">Semester:</label>
                    <select name="semester" id="sem" class="form-control" required>
                        <option value="">Default</option>
                        <option value="1st Semester">SEM-1</option>
                        <option value="2nd Semester">SEM-2</option>
                        <option value="3rd Semester">SEM-3</option>
                        <option value="4th Semester">SEM-4</option>
                        <option value="5th Semester">SEM-5</option>
                        <option value="6th Semester">SEM-6</option>
                        <option value="7th Semester">SEM-7</option>
                        <option value="8th Semester">SEM-8</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-50 d-block mx-auto form-control mt-4">Find</button>
        </form>
    </div>

    <% } else if (section==='result' ) { %>


        <div class="container ">



            <div class="row">
                <% findNotes.forEach(notes=> { %>
                    <div class="d-flex mt-4 mx-auto" style="width: 20rem; ">
                        <div class="card">
                            <iframe src="/uploads/<%= notes.filename %>" frameborder="0" class="card-img-top"
                                style="overflow-y: hidden;" scrolling="no" loading="lazy"></iframe>
                            <div class="card-title text-center">
                                <h4>
                                    <%= notes.subname+notes.subcode %>
                                </h4>
                            </div>
                            <div class="card-body">
                                <a class="btn btn-primary d-block w-50 mx-auto my-2"
                                    href="/uploads/<%= notes.filename %>"><i class="fa fa-eye m-1"
                                        aria-hidden="true"></i>view</a>

                                <a class="btn  btn-primary d-block w-50 mx-auto" href="/uploads/<%= notes.filename %>"
                                    download="<%= notes.subname %>-<%= notes.subcode %>"><i class="fa fa-download m-1"
                                        aria-hidden="true"></i>download</a>
                            </div>
                        </div>


                    </div>
                    <% } )%>

            </div>
        </div>

        <% } %>