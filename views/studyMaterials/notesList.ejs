  <div
  class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom mx-4">
  <h1 class="h2" style="color: rgb(12, 98, 12);
  font-size: 30px;
  font-family: 'Courier New', Courier, monospace;
  font-weight: 400;">DASHBOARD</h1>

  <div class="btn-toolbar mb-2 mb-md 0">
    <div class="btn-group  me-2">
      <a href="/adminDashboard/materials/file" class="btn btn-sm btn-outline-success"> <i class="bi bi-person-fill-add"></i> New Notes</a>
    </div>
  </div>
</div>


<!-- notes details table -->

<div class="table-responsive mx-4  ">
  <table class="table  table-striped table-sm">

    <thead class="table-success ">
      <tr class="align-middle text-center ">
        <th scope="col" class="text-danger">S/No</th>
        <th scope="col">Subject Code</th>
        <th   scope="col">Subject Name</th>
        <th scope="col">Department</th>
        <th scope="col">Semester</th>
        <th scope="col" class="text-center">Action</th>
      </tr>
    </thead>
    <tbody class="  ">
      <% allNotes.forEach((file,index)=> { %>
        <tr class="align-middle text-center ">
          <td><%= index+1 %></td>
          <td class="fname">
            <%=file.subcode %>
          </td>
          <td class="lname"> 
            <%= file.subname %>
          </td >
          <td class="email">
            <%= file.department %>
          </td>
          <td class="tel">
            <%= file.semester %>
          </td>
          <td class="d-flex gap-2 justify-content-center">
            <form action="/adminDashboard/materials/profile/<%=file.id %>" method="get">
              <button type="submit" class="btn  text-primary"><i class="bi bi-eye"></i></button>
            </form>
            <form action="/adminDashboard/materials/delete/<%= file.id %>" method="post">
              <button type="submit" class="btn text-danger">
                <i class="bi bi-trash3"></i>
              </button>
            </form>

          </td>


        </tr>
        <% }) %>
    </tbody>
  </table>
</div>